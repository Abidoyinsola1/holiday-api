<%- include('partials/header.ejs') %>
  <h1 class="text-center my-2">
    <%= heading %>
  </h1>
  <div class="row">
    <div class="col-4 px-5">
      <form action="/" method="post">
        <select name="country" class="">
          <option disabled selected>Select a Country</option>
          <% countryDetails.map((item)=> { %>
            <option value="<%= item.code %> <%= item.name %>">
              <%= item.name %>
            </option>
            <% }) %>
        </select>
        <br />
        <button class="p-2 border-0" type="submit">
          Check it Out! <i class="fa fa-arrow-circle-down"></i>
        </button>
      </form>
    </div>
    <div class="col-8">
      <% holidayDisplay.map((holData)=> {%>
        <div class="">
          <div class="col-6 col-sm-3">
            <div class="card w-75 m-3">
              <div class="card-body text-center">
                <h4 class="card-title">
                  <%= holData.name %>
                </h4>
                <h6 class="card-text">
                  <%= holData.date %>
                    <h6 />
                    <p>Public: <%= holData.public %>
                    </p>
              </div>
            </div>            
          </div>
        </div>
        <% })%>
    </div>
  </div>