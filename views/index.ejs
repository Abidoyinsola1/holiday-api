<%- include('partials/header.ejs') %>
  <h1 class="text-center mt-5">
    <%= heading %>
  </h1>
  <div class="container">
    <div class="row">
      <div class="col-5 mt-4">
        <form action="/" method="post">
          <select name="country" class="">
            <option disabled selected>Select a Country</option>
            <% countryDetails.map((item)=> { %>
              <option value="<%= item.code %> <%= item.name %>">
                <%= item.name %>
              </option>
              <% }) %>
          </select>
          <br />
          <button class="p-2 border-0" type="submit">
            Check it Out! <i class="fa fa-arrow-circle-down"></i>
          </button>
        </form>
      </div>
      <div class="col-7 mt-4">
        <% holidayDisplay.map((holData)=> {%>
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                  <div class="card-header">
                    <h3><%= holData.name %></h3>
                  </div>
                  <div class="card-body">
                    <h6 class="card-title"><%= holData.date %></h6>
                    <p class="card-text">Public: <%= holData.public %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
        <% })%>
      </div>
    </div>
  </div>
  </body>

  </html>