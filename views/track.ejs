<%- include('partials/header.ejs') %>
<h1 class="text-center mt-5"><%= heading %></h1>
<div class="container">
  <table class="table table-secondary table-striped">
    <th colspan="3" class="text-center"><%= searchedData.length %> QUERIES</th>
    <tr>
      <th>S/N</th>
      <th>Searched Country</th>
      <th>Searched Time</th>
    </tr>
    <% searchedData.map((search, index) => {%>
    <tr>
      <td><%= index+1 %></td>
      <td><%= search.searchedItem %></td>
      <td><%= search.updated %></td>
    </tr>
    <% })%>
  </table>
</div>
